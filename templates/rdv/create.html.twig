{% extends 'TemplateAdmin/layout.html.twig' %}

{% block title %}RDV{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header justify-content-between d-flex align-items-center">
                        <h4 class="card-title">Coproprite</h4>
                    </div><!-- end card header -->
                    <form action="{{ path('PrendreRdv')}}" method="post">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="mb-3 row">
                                        <label  class="col-md-2 col-form-label">Date Rendez-vous</label>
                                        <div class="col-md-10">
                                            <input class="form-control"  name="Date" type="datetime-local">
                                        </div>
                                    </div><!-- end row -->
                                    <div class="mb-3 row">
                                        <label  class="col-md-2 col-form-label">Type Rendez-vous</label>
                                        <div class="col-md-10">
                                            {{ render(controller('App\\Controller\\TypeRDVController::PrendreRdvType')) }}
                                        </div>
                                    </div><!-- end row -->

                                    <div class="mb-3 row">
                                        <label  class="col-md-10 col-form-label"></label>
                                        <div class="col-md-2">
                                            <input type="submit" class="btn btn-success" value="Enregister" />
                                        </div>
                                    </div><!-- end row -->

                                </div>
                            </div>
                        </div><!-- end col -->
                    </form>
                </div><!-- end row -->
            </div><!-- end card body -->
        </div>
    </div>
{% endblock %}